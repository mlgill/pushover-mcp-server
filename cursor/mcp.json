{
  "mcpServers": {
    "Pushover": {
      "command": "uvx",
      "args": [
        "--from", "git+ssh://git@github.com/mlgill/pushover-mcp-server.git",
        "pushover-mcp"
      ],
      "env": {
        "PUSHOVER_TOKEN": "your-app-token-here",
        "PUSHOVER_USER_KEY": "your-user-key-here"
      }
    }
  }
}
